<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zrm.tumblr"
    android:versionCode="4444"
    android:versionName="1.4.6" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="21"></uses-sdk>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- Include following permission if you load images from Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Include following permission if you want to cache images on SD card -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".app.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".view.IndexActivity"
            android:label="@string/title_activity_index" >
        </activity>
        <!--<activity
            android:name=".view.RegisterActivity"
            android:label="@string/title_activity_index">
        </activity>-->
        <activity
            android:name=".view.GoogleCardsActivity"
            android:label="@string/title_activity_google_cards" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--  -->
        <meta-data
            android:name="APP_KEY"
            android:value="6625d38569d15a3f151f8078" />
        <meta-data
            android:name="APP_SECRET"
            android:value="6625d38569d15a3f151f8078" />
        <!-- 是否为开发版本,正式发版时改为false -->
        <meta-data
            android:name="IS_DEV_ENV"
            android:value="true" />


    </application>

</manifest>
